{
  "expo": {
    "name": "StudyMap Pro",
    "slug": "studymap-pro",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "studymapmobile",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "metro": {
      "resolver": {
        "assetExts": [
          "bin",
          "txt",
          "jpg",
          "png",
          "json",
          "gif",
          "webp",
          "svg"
        ]
      }
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.studymap.mobile",
      "infoPlist": {
        "UIBackgroundModes": [
          "background-processing",
          "background-fetch",
          "background-processing",
          "background-fetch"
        ],
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "package": "com.studymap.mobile",
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "RECEIVE_BOOT_COMPLETED",
        "VIBRATE",
        "WAKE_LOCK"
      ],
      "edgeToEdgeEnabled": true
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/images/notification-icon.png",
          "color": "#4F46E5",
          "mode": "production"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "84e831a9-977e-48cf-b479-41d49550fdd5"
      }
    }
  }
}
